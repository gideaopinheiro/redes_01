<GameButton>:
    disabled_color: [1, 1, 1, .85]
    font_size: self.width
    size_hint: .8, .8

<GameGrid>:
    spacing: 10
    width: self.height
    size_hint_x: None

    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            pos: self.x + self.width * 1/3 - 4, 5
            size: 5, self.height + 20
        
        Rectangle:
            pos: self.x + self.width * 2/3, 5
            size: 5, self.height + 20
        
        Rectangle:
            pos: 5, self.y + self.height * 1/3 - 4
            size: self.width + 20, 5
        
        Rectangle:
            pos: 5, self.y + self.height * 2/3
            size: self.width + 20, 5